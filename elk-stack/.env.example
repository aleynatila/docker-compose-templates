# ELK Stack Environment Variables Template
# Copy this file to .env and modify the values as needed

# Elasticsearch Configuration
ELASTIC_VERSION=8.11.0
ELASTIC_PASSWORD=your_secure_elasticsearch_password
ELASTIC_CLUSTER_NAME=docker-cluster
ELASTIC_NODE_NAME=node-1

# Memory Configuration
ES_JAVA_OPTS=-Xms512m -Xmx512m
LS_JAVA_OPTS=-Xmx256m -Xms256m

# Network Configuration
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
LOGSTASH_PORT=5044

# Security Configuration
XPACK_SECURITY_ENABLED=false
XPACK_MONITORING_ENABLED=true

# Kibana Configuration
KIBANA_SYSTEM_PASSWORD=your_secure_kibana_password
